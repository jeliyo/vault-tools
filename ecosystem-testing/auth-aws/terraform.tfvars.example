#-------------------
# Required
#-------------------

# SSH key name to access EC2 instances. This should already exist in the AWS Region
key_name = "MY_EC2_KEY_NAME"


#-----------------------------------------------
# Optional: To overwrite the default settings
#-----------------------------------------------

# All resources will be named/tagged with this (default is 'vault-aws-auth-test')
environment_name = "vault-aws-auth-test"

# AWS region & AZs (default is 'us-east-1' and 'us-east-1a')
aws_region = "us-east-1"
availability_zones = "us-east-1a"

# Instance size (default is t2.micro)
instance_type = "m5.large"

# Number of Vault servers to provision (default is 1)
vault_server_count = 1

# Vault binary version
# vault_zip_file = "https://releases.hashicorp.com/vault/1.9.0-rc1+ent/vault_1.9.0-rc1+ent_linux_amd64.zip"
